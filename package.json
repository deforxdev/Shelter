{
  "name": "shelter-game",
  "version": "1.0.0",
  "description": "Shelter - Multiplayer Bunker Game",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:react\" \"wait-on http://localhost:3000 && npm start\"",
    "dev:react": "react-scripts start",
    "build": "react-scripts build",
    "dist": "electron-builder --win",
    "build:dir": "electron-builder --win --dir"
  },
  "build": {
    "appId": "com.shelter.game",
    "productName": "Shelter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!node_modules/.cache/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^39.2.6",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.32",
    "react-scripts": "^5.0.1",
    "tailwindcss": "^3.3.6",
    "typescript": "^4.9.5",
    "wait-on": "^7.2.0"
  }
}
